<style>
    .carousel {
        max-width: 1010px;
        margin: 0 20px;
        overflow: hidden;
    }

    .slides {
        display: flex;
        transition: transform 0.5s ease;
    }

    .slide {
        display: flex;
        width: 100%; /* Cada slide ocupa todo el ancho del carousel */
        padding: 5px 5px;
    }

        .slide img {
            box-sizing: border-box;
            padding: 5px; /* Espacio entre imágenes */
        }

    .navigation {
        text-align: center;
        margin-top: 15px;
        margin-bottom: 15px;
    }

        .navigation label {
            cursor: pointer;
            display: inline-block;
            height: 10px;
            width: 10px;
            background: #ccc;
            border-radius: 50%;
            margin: 0 5px;
        }

    .carousel .carousel-radio {
        display: none;
    }

    #slide-1:checked ~ .slides {
        transform: translateX(0%);
    }

    #slide-2:checked ~ .slides {
        transform: translateX(-100%);
    }

    #slide-3:checked ~ .slides {
        transform: translateX(-200%);
    }

    .carousel .carousel-radio:nth-of-type(1):checked ~ .navigation label:nth-of-type(1),
    .carousel .carousel-radio:nth-of-type(2):checked ~ .navigation label:nth-of-type(2),
    .carousel .carousel-radio:nth-of-type(3):checked ~ .navigation label:nth-of-type(3) {
        background-color: forestgreen;
    }
</style>

<script>

    var sliderInterval; // Variable global para almacenar el intervalo del slider

    // Función para avanzar automáticamente el slider
    function avanzarSlider() {
        // Obtener los radio buttons del carousel
        var radios = document.querySelectorAll('.carousel-radio');

        // Encontrar el radio button actualmente seleccionado
        var currentRadio = document.querySelector('.carousel-radio:checked');

        // Encontrar el índice del radio button actual
        var currentIndex = Array.from(radios).indexOf(currentRadio);

        // Calcular el índice del próximo radio button
        var nextIndex = (currentIndex + 1) % radios.length;

        // Seleccionar el próximo radio button
        radios[nextIndex].checked = true;

        // Disparar evento de cambio manualmente
        radios[nextIndex].dispatchEvent(new Event('change'));
    }

    // Función para iniciar el avance automático del slider
    function iniciarSliderAutomatico() {
        clearInterval(sliderInterval); // Detener el intervalo
        sliderInterval = setInterval(avanzarSlider, 5000); // Avanzar cada 5 segundos

        // Detener el slider automático cuando se pasa el mouse por encima
        var carousel = document.querySelector('.carousel');
        carousel.addEventListener('mouseover', detenerSliderAutomatico);

        // Reanudar el slider automático cuando se retira el mouse
        carousel.addEventListener('mouseout', reanudarSliderAutomatico);
    }

    // Función para detener el avance automático del slider
    function detenerSliderAutomatico() {
        clearInterval(sliderInterval); // Detener el intervalo
    }

    // Función para reanudar el avance automático del slider
    function reanudarSliderAutomatico() {
        clearInterval(sliderInterval); // Detener el intervalo
        sliderInterval = setInterval(avanzarSlider, 5000); // Reanudar el intervalo
    }

    // Llamar a la función para iniciar el slider automático
    iniciarSliderAutomatico();
</script>



