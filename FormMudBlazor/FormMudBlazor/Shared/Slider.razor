@*Keyframes by https://animate.style/*@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container-fluid mt-4">
    <div class="row" style="width: 100%">
        <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-12">
            <!-- Primer carousel -->
            <div class="carousel-container">
                <div class="carousel-item backInDown animate__animated" id="item-1">
                    <img src="/images/cdtdegas.jpg" alt="primera imagen">
                </div>
                <div class="carousel-item backInDown animate__animated" id="item-2">
                    <img src="/images/cdtdegas2.jpg" alt="segunda imagen">
                </div>
                <div class="carousel-item backInDown animate__animated" id="item-3">
                    <img src="/images/cdtdegas3.jpg" alt="tercera imagen">
                </div>
                <div class="carousel-controls">
                    <button class="prev-btn">&#10094;</button>
                    <button class="next-btn">&#10095;</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .carousel-container {
        position: relative;
        overflow: hidden;
        width: 100%; /* Ajuste de ancho */
        max-width: 1200px; /* Ancho máximo */
        margin: 0 auto; /* Centrar el carousel */
        padding-top: 56.25%; /* Proporción de aspecto 16:9 (538/958) */
        height: 300px;
    }

    .carousel-item {
        position: absolute;
        top: 0;
        left: 0;
        height: 70%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 24px;
    }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background-size: cover;
        }

    /* Estilos para bullets y flechas */
    .carousel-controls {
        position: absolute;
        bottom: 19%;
        padding-left: 50%;
        margin: 0 auto; /* Centra horizontalmente dentro del contenedor */
        z-index: 10;
        display: flex;
        justify-content: center; /* Centra los elementos hijos horizontalmente */
    }

        .carousel-controls button {
            background-color: transparent;
            border: none;
            cursor: pointer;
            font-size: 28px;
            color: forestgreen;
        }
</style>

<script>
    var sliderInterval2; // Variable global para almacenar el intervalo del slider
    var currentItem = 0; // Índice del slide actual

    // Obtener elementos del carousel
    var carouselItems = document.querySelectorAll('.carousel-item');
    var prevBtn = document.querySelector('.prev-btn');
    var nextBtn = document.querySelector('.next-btn');

    // Función para mostrar el slide actual
    function showSlide(index) {
        carouselItems.forEach((item, i) => {
            item.style.display = (i === index) ? 'flex' : 'none';
        });
    }

    // Función para avanzar al siguiente slide
    function nextSlide() {
        currentItem = (currentItem + 1) % carouselItems.length;
        showSlide(currentItem);
    }

    // Función para retroceder al slide anterior
    function prevSlide() {
        currentItem = (currentItem - 1 + carouselItems.length) % carouselItems.length;
        showSlide(currentItem);
    }

    // Función para iniciar el avance automático del slider
    function iniciarSliderAutomatico2() {
        clearInterval(sliderInterval2); // Detener el intervalo
        sliderInterval2 = setInterval(nextSlide, 5000); // Avanzar cada 5 segundos

        // Detener el slider automático cuando se pasa el mouse por encima
        var carousel = document.querySelector('.carousel-container');
        carousel.addEventListener('mouseover', detenerSliderAutomatico2);

        // Reanudar el slider automático cuando se retira el mouse
        carousel.addEventListener('mouseout', reanudarSliderAutomatico2);
    }

    // Función para detener el avance automático del slider
    function detenerSliderAutomatico2() {
        clearInterval(sliderInterval2); // Detener el intervalo
    }

    // Función para reanudar el avance automático del slider
    function reanudarSliderAutomatico2() {
        clearInterval(sliderInterval2); // Detener el intervalo
        sliderInterval2 = setInterval(nextSlide, 5000); // Reanudar el intervalo
    }

    // Configurar eventos para los botones de navegación
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);

    // Inicializar el primer slide y el slider automático
    showSlide(currentItem);
    iniciarSliderAutomatico2();

</script>